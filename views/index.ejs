<%- include('partials/header') %>

<div class="container mt-5">
  <div class="row">
    <% posts.forEach(post => { %>
      <div class="post" style="max-width: 200px; margin-bottom: 20px; padding: 10px; border: 1px solid #ddd; border-radius: 5px; text-align: center;">
        
        <!-- Post Image First -->
        <% if (post.image) { %>
          <img src="<%= post.image %>" alt="Post Image" style="max-width: 100%; height: auto; border-radius: 5px; margin-bottom: 10px;" />
        <% } %>
        
        <!-- Post Title -->
        <h2 style="font-size: 16px; font-weight: bold; background-color: #fb8127; color: white; padding: 5px; border-radius: 5px; margin-bottom: 10px;">
          <%= post.title %>
        </h2>

        <!-- Post Content Preview -->
        <p style="font-size: 14px; margin-bottom: 10px;"><%= post.content.substring(0, 100) %>...</p>
        
        <!-- Read More Link -->
        <a href="/post/<%= post._id %>" style="color: #1b479e; text-decoration: none; font-weight: bold;">Read More</a>
        
      </div>
    <% }) %>
  </div>
</div>

<%- include('partials/footer') %>
