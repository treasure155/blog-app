<%- include('../partials/header') %>
<div class="container mt-5">
  <h2 class="mb-4">All Posts</h2>
  <a href="/admin/new-post" class="btn btn-primary mb-3">âž• Add New Post</a>
  <table class="table table-striped">
    <thead class="table-dark">
      <tr>
        <th>Title</th>
        <th>Image</th>
        <th>Date</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% posts.forEach(post => { %>
        <tr id="post-<%= post._id %>">
          <td><%= post.title %></td>
          <td><img src="<%= post.image %>" width="100" /></td>
          <td><%= post.createdAt.toDateString() %></td>
          <td>
            <!-- Delete Button -->
            <button class="btn btn-danger btn-sm" onclick="deletePost('<%= post._id %>')">Delete</button>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<!-- Include jQuery for AJAX -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
  function deletePost(postId) {
    if (confirm('Are you sure you want to delete this post?')) {
      $.ajax({
        url: '/admin/delete-post/' + postId,
        type: 'GET',  // Sending a GET request for deletion
        success: function(response) {
          // If successful, remove the post from the page
          $('#post-' + postId).remove();  
          alert('Post deleted successfully!');
        },
        error: function(err) {
          console.error('Error:', err);
          alert('There was an error deleting the post.');
        }
      });
    }
  }
</script>

